<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopMenu"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:background="#50000000"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <FrameLayout
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_goods_fits_car"
                android:layout_height="40dp" />

            <com.demo.view.bezier.ShoppingView
                android:id="@+id/tv_good_fitting_num"
                android:text="0"
                android:layout_gravity="right"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvMoney"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center|left"
            android:text="￥：0.0元"
            android:textSize="16sp"
            android:textColor="@color/text_color_read"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSettlement"
            android:text="结算"
            android:background="@drawable/sp_common_fill_bg"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>